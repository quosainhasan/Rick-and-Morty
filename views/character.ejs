<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= character.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('components/nav.ejs') %>
    <section class="my-5 userprofile">
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-4">
            <div class="card mb-4">
              <div class="card-body text-center">
                <img
                  src="<%= character.image %>"
                  alt="avatar"
                  class="rounded-circle img-fluid avatar"
                  style="width: 150px"
                />
                <h5 class="my-3"><%= character.name %></h5>
                <p class="text-muted mb-1">Origin: <%= character.origin.name %></p>
                <p class="text-muted mb-4">Last known location: <%= character.location.name %></p>
              </div>
            </div>

            <!-- Profile Edit -->

            <!-- Full Details of Profile -->
          </div>
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h4 class="mb-0">Full Name</h4>
                  </div>
                  <div class="col-sm-9">
                    <h4 class="text-muted mb-0"><%= character.name %></h4>
                  </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <h4 class="mb-0">Status</h4>
                    </div>
                    <div class="col-sm-9">
                        <h4 class="text-muted mb-0"><%= character.status %></h4>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <h4 class="mb-0">Species</h4>
                    </div>
                    <div class="col-sm-9">
                        <h4 class="text-muted mb-0"><%= character.species %></h4>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <h4 class="mb-0">Gender</h4>
                    </div>
                    <div class="col-sm-9">
                        <h4 class="text-muted mb-0"><%= character.gender %></h4>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="my-5">
        <div class="container">
            <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Episodes</h2>
            </div>
            <% nameofEpisodes.forEach(episode => { %>
                <div class="col-12">
                <div class="card mb-4">
                    <div class="card-body">
                    <h5 class="card-title">Episode: <%= episode.name %></h5>
                    <p class="card-text">Air date: <%= episode.air_date %></p>
                    <p class="card-text">Episode: <%= episode.episode %></p>
                    </div>
                </div>
                </div>
            <% }) %>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
