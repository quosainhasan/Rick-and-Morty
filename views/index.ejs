<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rick and Morty</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <%- include('components/nav.ejs') %>
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">Rick and Morty</h1>
            </div>
        </div>
        <div class="row">
            <% characters.forEach(character => { %>
                <div class="col">
                    <div class="card my-2" style="width: 18rem;">
                        <img src="<%= character.image %>" class="card-img-top" alt="<%= character.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= character.name %></h5>
                            <p class="card-text">Status: <%= character.status %></p>
                            <p class="card-text">Species: <%= character.species %></p>
                            <p class="card-text">Gender: <%= character.gender %></p>
                            <hr>
                            <p class="card-text">Origin: <%= character.origin.name %></p>
                            <p class="card-text">Last known location: <%= character.location.name %></p>
                            <hr>
                            <a href="/character/<%= character.id %>" class="btn btn-primary">More info</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="container my-5 text-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            <% let startPage = Math.max(1, page - 5); %>
            <% let endPage = Math.min(pages, startPage + 9); %>
            <% for(let i = startPage; i <= endPage; i++) { %>
                <li class="page-item"><a class="page-link" href="/characters?page=<%= i %>"><%= i %></a></li>
            <% } %>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>